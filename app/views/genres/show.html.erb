<%= render "layouts/navbar" %>
<div class="container mx-auto p-4 flex flex-col gap-4">
  <h1 class="text-xl font-bold"><%= @genre.name %>の資格を探す</h1>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-2">
    <% @genre.licenses.each do |license| %>
      <%= link_to license_path(license) do %>
        <div class="border p-4 hover:bg-primary-content rounded-md">
          <p><%= license.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

