<%= render "layouts/navbar" %>
<div class="container mx-auto p-4 flex flex-col gap-4">
  <h1 class="text-xl font-bold">分野の一覧</h1>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% @categories.each do |category| %>
      <div class="border rounded-md py-2 px-4">
        <h2 class="font-bold text-primary text-lg py-1">
          <%= link_to category.name, category_path(category.en_name), class: 'link link-hover' %>
        </h2>
        <ul>
          <% category.genres.each do |genre| %>
            <li>
              <%= link_to genre.name, genre_path(genre), class: 'link link-hover' %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
