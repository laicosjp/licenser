<%= render "layouts/navbar" %>
<div class="container mx-auto p-4">
  <div class="grid grid-cols-3 gap-4">
    <% @categories.each do |category| %>
      <div class="border rounded-md py-2 px-4">
        <h2 class="font-bold text-primary text-xl py-1">
          <%= link_to category.name, category_path(category), class: 'link link-hover' %>
        </h2>
        <ul>
          <% category.genres.each do |genre| %>
            <li><%= genre.name %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
